<?xml version="1.0" encoding="utf-8" ?>
<project name="NSvn.Core.Tests" default="rebuild">
    <property name="verbose" value="false"/>
    <property name="src.dir" value="."/>
    <property name="warninglevel" value="/warn:3"/>
    <property name="lib.dir" value="../lib"/>
    
    
    <target name="rebuild">
        <call target="clean"/>
        <call target="build"/>
    </target>
    
    <target name="clean">
        <delete dir="build-Release" verbose="${verbose}" failonerror="false" />
        <delete dir="build-Debug" verbose="${verbose}" failonerror="false" />
    </target>
    
    <target name="init">
        <mkdir dir="${build.dir}"/>
    </target>
    
    <target name="build">
        <call target="compile"/>                
    </target>
    
    <target name="resources" depends="init">
    </target>
    
    <target name="compile" depends="init">
        <property name="define" value="TRACE"/>
        <property name="define" value="DEBUG;${define}" if="${debug}"/>
        <property name="define" value="ALT_ADMIN_DIR;${define}" if="${alt.admin.dir}"/>

        <echo message="${lib.dir}/nunit.framework.dll"/>
        
        <csc target="library" output="${build.dir}/Ankh.Tests.dll" 
            verbose="${verbose}" define="${define}" debug="${debug}">
            <references>
                <include name="..\NSvn.Common\${build.dir}\NSvn.Common.dll"/>
                <include name="..\NSvn.Core\${build.dir}\NSvn.Core.dll"/>
                <include name="..\NSvn.Core.Tests\${build.dir}\NSvn.Core.Tests.dll"/>
                <include name="..\Ankh\${build.dir}\Ankh.dll"/>
                <include name="..\Ankh.UI\${build.dir}\Ankh.UI.dll"/>
                <include name="..\Utils\${build.dir}\Utils.dll"/>
                <include name="..\TestUtils\${build.dir}\TestUtils.dll"/>
                <include name="${build.dir}/AnkhUserControlHostLib.dll"/>
                <include name="${lib.dir}\nunit.framework.dll"/>
                <include name="${lib.dir}\Sharpziplib.dll"/>
                <include name="${lib.dir}\EnvDTE.dll"/>
                <include name="${lib.dir}\extensibility.dll"/>
                <include name="${lib.dir}\Office.dll"/>
                <include name="${lib.dir}\Microsoft.VisualStudio.OLE.Interop.dll"/>
                <include name="${lib.dir}\Microsoft.VisualStudio.Shell.Interop.dll"/>
            </references>
            <resources basedir="${src.dir}" prefix="Ankh.Tests" dynamicprefix="true">
                <include name="repos.zip"/>
                <include name="repos2.zip"/>
                <include name="unversioned.zip"/>
                <include name="wc.zip"/>
            </resources>
            <sources basedir="${src.dir}">
                <include name="**/*.cs"/>
            </sources>
            
            
            
            <arg value="/debug:pdbonly" unless="${debug}"/>
            <arg value="${warninglevel}"/>
        </csc>
        
                
    </target>
    
</project>


