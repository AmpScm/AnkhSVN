<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Edit Properties</Name>
        <ID>EditProperties</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Set, get, delete, list or edit properties on an item</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>User selects "edit properties" on an item </Step>
            </FlowElement>
            <FlowElement>
                <Step>Dialogbox pops up and the developer can edit the property list</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer close the dialog box</Step>
            </FlowElement>
            <FlowElement>
                <Step>The properties are applied onto the item</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='ShowSvnFeedback'></Include>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>Properties are set on the item</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
