<UseCase>
    <Preface>
        <Name>Write Log Message</Name>
        <ID>WriteLogMessage</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Developer writes a log message</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>An operation requiring log message has been invoked</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Step>Developer selects whether he wants to see diff</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer writes log message</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer clicks "ok"</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions></Postconditions>
    </MainFlow>
</UseCase>
