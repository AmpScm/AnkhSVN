<?xml version="1.0" encoding="utf-8"?>
<project name="NSvn.Core.Tests.MCpp" default="rebuild">
    <property name="verbose" value="false"/>
    <property name="src.dir" value="."/>
    <property name="warninglevel" value="/warn:3"/>
    <property name="lib.dir" value="..\lib"/>
    
    <property name="bdb.lib" value="${svndir}\db4-win32\lib\libdb42d.lib" 
        if="${debug}" />
    <property name="bdb.lib" value="${svndir}\db4-win32\lib\libdb42.lib" 
        unless="${debug}" />

    <property name="bdb.dll" value="libdb42d.dll" if="${debug}" />
    <property name="bdb.dll" value="libdb42.dll" unless="${debug}" />

    
    <property name="cl.options" value='/Od /I "..\NSvn.Core" 
        /I "${svndir}\apr\include" /I "${svndir}\apr-iconv\include" 
        /I "${svndir}\apr-util\include" /I "${svndir}\subversion\include" 
        /AI "..\NSvn.Common\bin\Debug" /D "WIN32" /D "_DEBUG" /D "_MBCS" 
        /D "_WINDLL" /FD /EHsc /MDd /GS   /W3 /nologo /c /Zi /clr /TP /AI 
        ${lib.dir} /AI ..\NSvn.Core\${build.dir}\ /AI ..\NSvn.Common\${build.dir}'
        if="${debug}"/>
    <property name="cl.options" value='/Od /I "..\NSvn.Core" 
        /I "${svndir}\apr\include" /I "${svndir}\apr-iconv\include" 
        /I "${svndir}\apr-util\include" /I "${svndir}\subversion\include" 
        /AI "..\NSvn.Common\bin\Release" /D "WIN32" /D "_MBCS" /D "_WINDLL" 
        /FD /EHsc /MD /GS  /W3 /nologo /c /Zi /clr /TP /AI ${lib.dir} 
        /AI ..\NSvn.Core\${build.dir}\ /AI ..\NSvn.Common\${build.dir}'
        unless="${debug}"/>
        
    <property name="link.options" value='/NOLOGO /DLL /DEBUG 
        /DELAYLOAD:${bdb.dll} /PDB:"${build.dir}/NSvn.Core.pdb" comctl32.
        lib mswsock.lib ws2_32.lib rpcrt4.lib shlwapi.lib ${bdb.lib} 
        ${svndir}\Debug\subversion\libsvn_repos\libsvn_repos-1.lib 
        ${svndir}\Debug\subversion\libsvn_fs\libsvn_fs-1.lib 
        ${svndir}\Debug\subversion\libsvn_fs_fs\libsvn_fs_fs-1.lib 
        ${svndir}\Debug\subversion\libsvn_fs_base\libsvn_fs_base-1.lib  
        ${svndir}\Debug\subversion\libsvn_ra_dav\libsvn_ra_dav-1.lib 
        ${svndir}\Debug\subversion\libsvn_ra_local\libsvn_ra_local-1.lib 
        ${svndir}\Debug\subversion\libsvn_ra\libsvn_ra-1.lib 
        ${svndir}\Debug\subversion\libsvn_ra_svn\libsvn_ra_svn-1.lib 
        ${svndir}\neon\libneonD.lib 
        ${svndir}\Debug\subversion\libsvn_wc\libsvn_wc-1.lib 
        ${svndir}\Debug\subversion\libsvn_subr\libsvn_subr-1.lib 
        ${svndir}\Debug\subversion\libsvn_client\libsvn_client-1.lib 
        ${svndir}\Debug\subversion\libsvn_delta\libsvn_delta-1.lib 
        ${svndir}\Debug\subversion\libsvn_diff\libsvn_diff-1.lib 
        ${svndir}\apr\Debug\libapr.lib ${svndir}\apr-util\Debug\libaprutil.lib 
        ${svndir}\apr-iconv\Debug\libapriconv.lib 
        ${svndir}\apr-util\xml\expat\lib\LibD\xml.lib
        kernel32.lib user32.lib gdi32.lib winspool.lib comdlg32.lib advapi32.lib 
        shell32.lib ole32.lib oleaut32.lib uuid.lib DelayImp.lib'
        if="${debug}"/>
    
    <property name="link.options" value='/NOLOGO /DLL /DELAYLOAD:${bdb.dll} 
        comctl32.lib mswsock.lib ws2_32.lib rpcrt4.lib shlwapi.lib 
        ${bdb.lib} ${svndir}\Release\subversion\libsvn_repos\libsvn_repos-1.lib 
        ${svndir}\Release\subversion\libsvn_fs\libsvn_fs-1.lib 
        ${svndir}\Release\subversion\libsvn_fs_fs\libsvn_fs_fs-1.lib 
        ${svndir}\Release\subversion\libsvn_fs_base\libsvn_fs_base-1.lib 
        ${svndir}\Release\subversion\libsvn_ra_dav\libsvn_ra_dav-1.lib 
        ${svndir}\Release\subversion\libsvn_ra_local\libsvn_ra_local-1.lib 
        ${svndir}\Release\subversion\libsvn_ra\libsvn_ra-1.lib 
        ${svndir}\Release\subversion\libsvn_ra_svn\libsvn_ra_svn-1.lib 
        ${svndir}\neon\libneonD.lib 
        ${svndir}\Release\subversion\libsvn_wc\libsvn_wc-1.lib 
        ${svndir}\Release\subversion\libsvn_subr\libsvn_subr-1.lib 
        ${svndir}\Release\subversion\libsvn_client\libsvn_client-1.lib 
        ${svndir}\Release\subversion\libsvn_delta\libsvn_delta-1.lib 
        ${svndir}\Release\subversion\libsvn_diff\libsvn_diff-1.lib 
        ${svndir}\apr\Release\libapr.lib ${svndir}\apr-util\Release\libaprutil.lib 
        ${svndir}\apr-iconv\Release\libapriconv.lib 
        ${svndir}\apr-util\xml\expat\lib\LibR\xml.lib  
        kernel32.lib user32.lib 
        gdi32.lib winspool.lib comdlg32.lib advapi32.lib shell32.lib ole32.lib 
        oleaut32.lib uuid.lib DelayImp.lib'
        unless="${debug}"/>
        

    <target name="rebuild">
        <call target="clean"/>
        <call target="build"/>
    </target>
    
    <target name="clean">
        <delete dir="build-Debug" verbose="${verbose}" failonerror="false" />
        <delete dir="build-Release" verbose="${verbose}" failonerror="false" />
    </target>
    
    <target name="init">
        <mkdir dir="${build.dir}"/>
    </target>
    
    <target name="build">
        <call target="compile"/>  
        <call target="link"/>              
    </target>
    
    <target name="compile" depends="init">
        <property name="cl.options" value="${cl.options} /D ALT_ADMIN_DIR" 
        if="${alt.admin.dir}"/>


        <cl outputdir="${build.dir}" verbose="${verbose}"
             options="${cl.options}">
            <sources>
                <includes name="**/*.cpp"/>
            </sources>
            
        </cl>                
    </target>
    
    <target name="link" depends="compile, init">
        <link output="${build.dir}\NSvn.Core.Tests.MCpp.dll" 
            options="${link.options}" verbose="${verbose}">
            <sources>
                <includes name="${build.dir}\*.obj"/>
                <includes name="..\NSvn.Core\${build.dir}\*.obj" />
            </sources>
        </link>
    </target>
    
</project>


