<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Export Item</Name>
        <ID>ExportItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Export an item from the repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item exists in the repository</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectRepositoryItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects "Export"</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects local folder to export to</Step>
            </FlowElement>
            <FlowElement>
                <Step>SVN exports the item</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='ShowSvnFeedback'></Include>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The item is exported to a local directory</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
