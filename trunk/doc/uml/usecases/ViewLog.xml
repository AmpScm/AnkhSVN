<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>View Log</Name>
        <ID>ViewLog</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Display log messages from repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item must be under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer chooses "Log" from menu</Step>
            </FlowElement>
            <FlowElement>
                <Step>Optional: Developer choose revision range</Step>
            </FlowElement>
            <FlowElement>
                <Step>svn fetches log from repository</Step>
            </FlowElement>
            <FlowElement>
                <Step>Display log</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>Log messages are displayed</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
