<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Item info</Name>
        <ID>InfoItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Display info about item</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectLocalItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Retrieve info from svn</Step>
            </FlowElement>
            <FlowElement>
                <Step>Display info in VS:NET property pane</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions></Postconditions>
    </MainFlow>
</UseCase>
