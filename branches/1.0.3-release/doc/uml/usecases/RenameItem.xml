<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Rename Item</Name>
        <ID>RenameItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Rename an item</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item is under version control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectLocalItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer invokes the VS.NET Rename command on the item</Step>
            </FlowElement>
            <FlowElement>
                <Step>SVN renames the item</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The item has a new name</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
