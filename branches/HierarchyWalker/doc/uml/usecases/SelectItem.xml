<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Select Item</Name>
        <ID>SelectItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Select an item either locally or in the repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item exists</Precondition>
            <Precondition>The item is under version control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Step>Developer selects item from a tree view</Step>
            </FlowElement>
            <FlowElement>
                <Step>OPTIONAL: Developer selects revision</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The item is selected</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
