+/* Retrieve the name of the administrative directory */
+const char* svn_wc_get_adm_dir_name ()
+{
+  if (!svn_wc__adm_dir_name)
+    svn_wc__adm_dir_name = strdup(".svn");
+
+  return svn_wc__adm_dir_name;
+}
+
+/* Set the name of the administrative directory. The
+ * function will make a copy of the passed in string */
+void svn_wc_set_adm_dir_name (const char* name)
+{
+  if (svn_wc__adm_dir_name)
+    free (svn_wc__adm_dir_name);
+
+  svn_wc__adm_dir_name = strdup (name);
+}
