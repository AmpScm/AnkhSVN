<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Import Solution</Name>
        <ID>ImportSolution</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Import an existing solution into an SVN repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The solution is not currently an SVN working copy</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Step>Developer selects a VS.NET solution</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects "Import solution"</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='SelectRepositoryItem'></Include>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='WriteLogMessage'></Include>
            </FlowElement>
            <FlowElement>
                <Step>SVN imports all source files contained in the solution</Step>
            </FlowElement>
            <FlowElement>
                <Step>Close solution</Step>
            </FlowElement>
            <FlowElement>
                <Step>Inform developer that backup copies will be made, and where</Step>
            </FlowElement>
            <FlowElement>
                <Step>Make backup copies of solution directories</Step>
            </FlowElement>
            <FlowElement>
                <Step>Delete solution directories</Step>
            </FlowElement>
            <FlowElement>
                <Step>Check out solution from repository to original location</Step>
            </FlowElement>
            <FlowElement>
                <Step>Reopen solution</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>Solution is under version control</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
