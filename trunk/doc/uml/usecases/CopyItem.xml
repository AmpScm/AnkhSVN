<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Copy Item</Name>
        <ID>CopyItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Copies an item from one path to another path</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>Item doesn't exist at destination path </Precondition>
            <Precondition>Item is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer chooses "Copy" from menu</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='SelectItem'></Include>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='WriteLogMessage'></Include>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='Developer chooses "Paste" from menu'></Include>
            </FlowElement>
            <FlowElement>
                <Step>svn copies item</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>Item is copied to new destination</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
