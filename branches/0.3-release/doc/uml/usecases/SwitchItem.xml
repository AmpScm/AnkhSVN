<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Switch Item</Name>
        <ID>SwitchItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Switch a working copy item to another part of the repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>Working copy item exists</Precondition>
            <Precondition>Repository path exists</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectLocalItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects "Switch"</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='SelectRepositoryItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer confirms the operation</Step>
            </FlowElement>
            <FlowElement>
                <Step>SVN switches to the specified path</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The working copy is updated to the specified path</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
