<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>View Item Status</Name>
        <ID>ViewItemStatus</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Display information about the item</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Step>An icon is displayed in the Solution Explorer next to the item signifying its status</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>Developer is enlightened</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
