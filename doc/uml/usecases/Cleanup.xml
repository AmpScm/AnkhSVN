<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Cleanup</Name>
        <ID>Cleanup</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Unlock a locked working copy</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The working copy is locked</Precondition>
            <Precondition>An SVN operation has failed due to the locked wc</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Step>Developer is asked whether a cleanup is desired</Step>
            </FlowElement>
            <FlowElement>
                <Step>Cleanup is run on the working copy area</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='ShowSvnFeedback'></Include>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The working copy is in an unlocked state</Postcondition>
            <Postcondition>OR: Cleanup failed</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
