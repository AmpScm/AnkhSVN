    <directory path="guidelines">
        <name>Guidelines</name>
        
        <file path="docguidelines.xml">
            <realpath>docguidelines.xml</realpath>
            <handler>viewdoc.html</handler>
            <name>Documentation guidelines</name>
            <description>A set of guidelines for how documentation is to be written</description>
        </file>
        <file path="codeguidelines.xml">
            <realpath>codeguidelines.xml</realpath>
            <handler>viewdoc.html</handler>
            <name>Code guidelines</name>
