<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Remove Item</Name>
        <ID>RemoveItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>The item is removed from working copy or repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer choose "Remove" from menu</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer is asked to confirme the delete</Step>
            </FlowElement>
            <FlowElement>
                <Step>svn removes the item</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The item is removed</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
