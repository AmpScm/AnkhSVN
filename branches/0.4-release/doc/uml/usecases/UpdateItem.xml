<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Update Item</Name>
        <ID>UpdateItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Brings your working copy in-sync with a revision in the repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectLocalItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects "Update" from the menu</Step>
            </FlowElement>
            <FlowElement>
                <Step>Optional: selects revision to be updated to</Step>
            </FlowElement>
            <FlowElement>
                <Step>svn updates</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='ShowSvnFeedback'></Include>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The item is updated</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
