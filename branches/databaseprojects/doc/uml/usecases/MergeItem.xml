<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Merge Item</Name>
        <ID>MergeItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Compare two paths and merge differences into working copy</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>Paths exist and are in version control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects "Merge"</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='SelectItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer confirms operation</Step>
            </FlowElement>
            <FlowElement>
                <Step>SVN performs the merge</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='ShowSvnFeedback'></Include>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The working copy contains the merged differences</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
