<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Show Local Changes</Name>
        <ID>ShowLocalChanges</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Display a diff showing the changes made to an item since last update</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectLocalItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer choose "Show Local Changes" from menu</Step>
            </FlowElement>
            <FlowElement>
                <Step>svn performs a diff</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='DisplayDiff'></Include>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The diff is displayed</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
