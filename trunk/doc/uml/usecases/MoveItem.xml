<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Move Ite </Name>
        <ID>MoveItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Moves an item from one path to another path</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>Item doesn't exist at destination path </Precondition>
            <Precondition>Item is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer choose "Cut" from menu</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='SelectItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects "Paste" from menu</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='WriteLogMessage'></Include>
            </FlowElement>
            <FlowElement>
                <Step>svn moves item</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>Item is moved to new destination</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
