<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Make patch</Name>
        <ID>MakePatch</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Developer creates a patch </Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>Project is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectLocalItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer invokes the MakePatch command</Step>
            </FlowElement>
            <FlowElement>
                <Step>Run SVN diff on the item</Step>
            </FlowElement>
            <FlowElement>
                <Step>Present developer with the diff</Step>
            </FlowElement>
            <FlowElement>
                <Step>Allow user to copy diff to clipboard</Step>
            </FlowElement>
            <FlowElement>
                <Step>OR: create new mail message with diff as attachment</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>A patch is created</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
