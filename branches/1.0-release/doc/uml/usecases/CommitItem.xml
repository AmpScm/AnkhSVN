<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Commit item</Name>
        <ID>CommitItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>The developer commits an item to the repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item has local changes</Precondition>
            <Precondition>The item is in the working copy</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectLocalItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>The user selects Commit item from a menu</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='WriteLogMessage'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Commit the item to the repository</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='ShowSvnFeedback'></Include>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The item is committed</Postcondition>
            <Postcondition>OR: The commit is rejected because of other committed changes</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
