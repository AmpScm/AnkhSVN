<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Revert Item</Name>
        <ID>RevertItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Revert item to pre-modified state</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item has local changes</Precondition>
            <Precondition>The item is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectLocalItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer chooses "Revert" from menu</Step>
            </FlowElement>
            <FlowElement>
                <Step>Ask developer to confirm the revert</Step>
            </FlowElement>
            <FlowElement>
                <Step>svn reverts item to "pristine" state</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The item is reverted</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
