<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Make directory</Name>
        <ID>MakeDir</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Create a new directory either in the repository or locally</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The parent path exists</Precondition>
            <Precondition>The parent path is under version control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects "Make directory"</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer enters new directory name</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='WriteLogMessage'></Include>
            </FlowElement>
            <FlowElement>
                <Step>SVN creates new directory</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='ShowSvnFeedback'></Include>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>New directory is created</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
