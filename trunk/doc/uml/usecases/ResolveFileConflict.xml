<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Resolve File Conflict</Name>
        <ID>ResolveFileConflict</ID>
        <Actors>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>Removes conflict files associated with conflicted projects or directories</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The files must be under revision control</Precondition>
            <Precondition>A conflict must have occured</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectLocalItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer chooses which of the revisions he wants to retain</Step>
            </FlowElement>
            <FlowElement>
                <Step>svn delets the remaining files</Step>
            </FlowElement>
            <FlowElement>
                <Step>Status is updated</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>Conflict is resolved </Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
