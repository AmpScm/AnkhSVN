<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>View Repository File</Name>
        <ID>ViewRepositoryFile</ID>
        <Actors>
            <ActorID>Repository</ActorID>
            <ActorID>Developer</ActorID>
        </Actors>
        <Summary>View a file in the repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The file exists in the repository</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectRepositoryItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects "View"</Step>
            </FlowElement>
            <FlowElement>
                <Step>SVN retrieves file contents from repository</Step>
            </FlowElement>
            <FlowElement>
                <Step>If file is text: Show in VS.NET editor window</Step>
            </FlowElement>
            <FlowElement>
                <Step>else: Invoke associated application</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The selected file is displayed</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
