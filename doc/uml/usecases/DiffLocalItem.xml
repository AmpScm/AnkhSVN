<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Diff Local Item</Name>
        <ID>DiffLocalItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Display a diff between two arbitrary revisions of a working copy item</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item is under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectLocalItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects "Diff" from menu</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects revisions</Step>
            </FlowElement>
            <FlowElement>
                <Step>svn performs a diff</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='DisplayDiff'></Include>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The diff is displayed</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
