<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Select Repository Item</Name>
        <ID>SelectRepositoryItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Select an item in a repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>Item under revision control</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Step>The developer specifies an URL to the repository</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer provides login credentials if required</Step>
            </FlowElement>
            <FlowElement>
                <Step>SVN connects to repository and requests a list of files</Step>
            </FlowElement>
            <FlowElement>
                <Step>The repository files are displayed in a tree-view</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects an item from the tree-view</Step>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The item is selected</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
