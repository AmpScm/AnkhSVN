<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='..\UseCaseXSL1.xsl'?>
<UseCase>
    <Preface>
        <Name>Diff Repository Item</Name>
        <ID>DiffRepositoryItem</ID>
        <Actors>
            <ActorID>Developer</ActorID>
            <ActorID>Repository</ActorID>
        </Actors>
        <Summary>Display a diff between two arbitrary revisions of an item in the repository</Summary>
    </Preface>
    <MainFlow>
        <Preconditions>
            <Precondition>The item exists in the repository</Precondition>
        </Preconditions>
        <FlowElements>
            <FlowElement>
                <Include useCaseID='SelectRepositoryItem'></Include>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects "Diff" from menu</Step>
            </FlowElement>
            <FlowElement>
                <Step>Developer selects revisions</Step>
            </FlowElement>
            <FlowElement>
                <Step>If developer wants to compare two different paths select another repository</Step>
            </FlowElement>
            <FlowElement>
                <Step>svn performs a diff</Step>
            </FlowElement>
            <FlowElement>
                <Include useCaseID='DisplayDiff'></Include>
            </FlowElement>
        </FlowElements>
        <Postconditions>
            <Postcondition>The diff is displayed</Postcondition>
        </Postconditions>
    </MainFlow>
</UseCase>
